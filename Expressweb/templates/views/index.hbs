<!DOCTYPE html>
<html>
<head>
	{{>headerlinks}}
</head>
<body>
	{{>navbar}}

	<div class="container-fluid ">
		<div class="row ">
			<div class="col-12 col-md-10 mx-auto">
				<div class="row ">
					<!-- left side div -->
					<div class="col-md-6 col-12 d-flex flex-column justify-content-center pt-3">
						<p class="fs-5">Welcome to weather app</p>
						<h3>Get The Latest <a class="text-info nav-link d-inline" href="/weather">Weather</a> Info Of Your City</h3>
						<a href="/weather" class="btn shadow rounded-pill w-25 mt-3">CHECK NOW</a>
					</div>
					<!-- right side div -->
					<div class="col-12 col-md-6" style="height: 35rem;">
						<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
						  <div class="carousel-inner p-5">
						    <div class="carousel-item active">
						      <img src="images/weather-app4.jpg" class="img-fluid ">
						    </div>
						    <div class="carousel-item">
						      <img src="images/weather-app1.jpg" class="img-fluid">
						    </div>
						    <div class="carousel-item">
						      <img src="images/weather-app2.jpg" class="img-fluid">
						    </div>
						  </div>
						  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
						    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
						    <span class="visually-hidden">Previous</span>
						  </button>
						  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
						    <span class="carousel-control-next-icon" aria-hidden="true"></span>
						    <span class="visually-hidden">Next</span>
						  </button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- footer code -->
	{{>footer}}
</body>
</html>